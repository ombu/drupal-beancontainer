  $plugins = array();
  $plugin_path = drupal_get_path('module', 'bean_container') . '/includes';

  $plugins['bean_container'] = array(
    'label' => t('Block Container'),
    'handler' => array(
      'class' => 'BeanContainer',
      'parent' => 'BeanPlugin',
      'path' => $plugin_path,
      'file' => 'BeanContainer.php',
    ),
    'file' => 'BeanContainer.php',
    'path' => $plugin_path,
    'editable' => TRUE,
  );

  return $plugins;
}

